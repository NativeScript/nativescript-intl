{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "noEmitHelpers": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": []
}
